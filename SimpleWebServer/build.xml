<?xml version="1.0" encoding="UTF-8"?>

<project name="SimpleWebServer" default="build" basedir=".">

<target name="build" depends="clean">
  <javac srcdir="src/edu/nmsu/cs/webserver" destdir="bin"/>
</target>

<target name="clean">
  <delete>
    <fileset dir="bin/edu/nmsu/cs/webserver" includes="**/*.class"/>
  </delete>
</target>

<target name="run" depends="build">
  <java classname="edu.nmsu.cs.webserver.WebServer" fork="true" classpath="bin">
  </java>
</target>

</project>